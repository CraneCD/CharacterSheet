{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["es2018"],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "typeRoots": ["./node_modules/@types", "../node_modules/@types"]
    },
    "include": [
        "src/**/*",
        "src/global.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "src/scripts"
    ]
}